{% extends 'base.html.twig' %}

{% block title %}Stock {{ cu.name }}{% endblock %}

{% block javascripts %}
<script src="/js/display-wheels-cu.js"></script>  
{% endblock %}

{% block body %}

<div class="d-flex justify-content-between">
    <h2 class="ml-4 mt-4 border-bottom mb-5">Stock meules : <span class="text-uppercase">{{ cu.name }}</span></h2>
    <a href="{{ asset('cus') }}" class="btn btn-success m-5">Retour au stock total</a>
</div>

<div class="row text-center font-weight-bold border-top border-bottom pt-2 pb-2 head-table">
    <div class="col-12">
        <div class="row">
            <div class="col-2">Type</div>
            <div class="col-2">Usinage</div>
            <div class="col-2">Matiere</div>
            <div class="col-1">Détail</div>
            <div class="col-1">Non livrées</div>
            <div class="col-1">Stock mini</div>
            <div class="col-1">Stock total</div>
            <div class="col-2">Commander</div>
        </div>
    </div>
</div>

{% for category, wheelsCu in wheels %}
<div class="interligne"></div>
<div class="row text-center">
    <div class="col-12"><h3 class="text-uppercase text-left ml-4">{{ category }}</h3></div>
    <div class="col-12">

        <!-- "typical" represent the name we usually give at the mole (diameter for forest, tickness of glass for trapezoidal mole) -->
        {% for type, typeData in wheelsCu %}
        <div class="row border-bottom border-top">
            <div class="col-2 border-right d-flex align-items-center justify-content-center">{{ type }}</div>

            {% for wheels in typeData %}
            <div class="col-2">{{ wheels.working }}</div>
            <div class="col-2">{{ wheels.matters}}</div>
            
            <div class="col-1">
                <a href="#" id="{{ 'button-type-wheels-' ~ wheels.id }}" class="details">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                    </svg>
                </a>
            </div>
            <div class="col-1">{{ wheels.totalNotDelivered }}</div>
            <div class="col-1 d-flex align-items-center justify-content-center font-blue1"><span class="badge badge-pill badge-dark">{{ wheels.stockMini }}</span></div>
            <div class="col-1 d-flex align-items-center justify-content-center font-green1 font-weight-bold">

            {% set stockExcepted = wheels.stockReal + wheels.totalNotDelivered %}

            {% if wheels.stockReal > wheels.stockMini %}
                <span class="badge badge-pill badge-primary">{{ wheels.stockReal }}</span>
            {% elseif stockExcepted >= wheels.stockMini %}
                <span class="badge badge-pill badge-warning">{{ wheels.stockReal }}</span>
            {% else %}
                <span class="badge badge-pill badge-danger">{{ wheels.stockReal }}</span>
            {% endif %}
            </div>
            
            <div class="col-2 d-flex align-items-center justify-content-center"><button type="button" class="btn btn-outline-primary">Commander</button></div>
        {% endfor %}
       
            
          
      </div>   
    {% endfor %}

    </div>
</div>

    
        
        
   
{% endfor %}



{% endblock %}
