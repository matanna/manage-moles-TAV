{% extends 'base.html.twig' %}

{% block title %}Modifier {{ cu.name }}{% endblock %}

{% block body %} 

<div class="interligne"></div>
<div class="row d-flex align-items-center">
    <div class="col-6">
        <h2 class="ml-4">Modifier le centre d'usinage : <span class="text-uppercase">{{ cu.name }}</span></h2>
    </div>
    <div class="col-6 text-right">
        <a href={{ asset('/manage/cus') }} class="btn btn-secondary mr-3">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-backspace" viewBox="0 0 16 16">
                <path d="M5.83 5.146a.5.5 0 0 0 0 .708L7.975 8l-2.147 2.146a.5.5 0 0 0 .707.708l2.147-2.147 2.146 2.147a.5.5 0 0 0 .707-.708L9.39 8l2.146-2.146a.5.5 0 0 0-.707-.708L8.683 7.293 6.536 5.146a.5.5 0 0 0-.707 0z"/>
                <path d="M13.683 1a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-7.08a2 2 0 0 1-1.519-.698L.241 8.65a1 1 0 0 1 0-1.302L5.084 1.7A2 2 0 0 1 6.603 1h7.08zm-7.08 1a1 1 0 0 0-.76.35L1 8l4.844 5.65a1 1 0 0 0 .759.35h7.08a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1h-7.08z"/>
              </svg>
        </a>
    </div>
    <div class="row ml-4">
        <div class="col-12"><a href="#" class="btn btn-outline-success" data-toggle="modal" data-target="#rename-cu">Renommer le centre d'usinage</a></div>
        <!--Modal for rename cu-->
        <div class="modal" id="rename-cu" tabindex="-1" aria-hidden="true" role="dialog">      
            <div class="modal-dialog" role="document">
                <form method="post" action="{{ asset('manage/' ~ cu.name ~ '/change-name') }}">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h5 class="modal-title">Renommer le centre d'usinage</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                            <label for="newCuName" class="pr-2">Nouveau nom : </label>
                            <input type="text" name="newCuName" id="newCuName">
                        </div>
                        <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Enregistrer</a>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!--End of Modal-->
    </div>
</div>

<hr>
<div class="interligne"></div>
<div class="row ml-4 font-weight-bold text-center">
    <div class="col-1"></div>
    <div class="col-11">
        <div class="row">
            <div class="col-2">Spécification</div>
            <div class="col-4">Désignation TAV</div>
            <div class="col-1">Matière</div>
            <div class="col-1">Stock mini</div>
            <div class="col-2 text-center">Actions</div>
        </div>
    </div>
</div>
<hr>

{% for nameTypeMeule, typeMeule in typesMeule %}
    <div class="row text-center">
        <div class="col-1 font-blue1 font-weight-bold d-flex align-items-center justify-content-center pt-2 pm-2">{{ nameTypeMeule }}</div>
        <div class="col-11">
            {% for nameTypical, typical in typeMeule %}
            <div class="row">
                <div class="col-2">{{ nameTypical }}</div>
                <div class="col-10">
                    {%  %}
                    <div class="row">
                        <div class="col-2"></div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endfor %}

{% endblock %}

