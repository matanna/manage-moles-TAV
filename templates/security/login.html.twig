
{% if app.user %}

<div class="mr-3 mt-2">Profil : <span class="text-uppercase">{{ app.user.username }}</span></div>
<div><a href="{{ path('app_logout') }}" class="btn btn-success text-nowrap">Se d√©connecter</a></div>

{% else %}



<form method="post" action="{{ path("app_login") }}" class="form-group d-flex">

    <input type="text" value="{{ last_username is defined }}" name="username" id="inputUsername" class="form-control mr-2" placeholder="Identifiant" required autofocus>
    <input type="password" name="password" id="inputPassword" class="form-control mr-2" placeholder="Mot de passe" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    {% if error is defined %}
        <button class="btn btn-danger text-nowrap" type="submit">Se connecter</button>
    {% else %}
        <button class="btn btn-success text-nowrap" type="submit">Se connecter</button>
    {% endif %}
    
</form>

{% endif %}
